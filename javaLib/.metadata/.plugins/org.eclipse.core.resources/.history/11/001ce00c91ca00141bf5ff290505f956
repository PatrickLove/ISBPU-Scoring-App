package com.ispbu.scoring;

public class TenthFrame extends Frame {

	private int throw3 = NO_SCORE;

	public Score score(){
		if(isStrike()){
			return Score.STRIKE;
		}
		else if(isSpare()){
			return Score.SPARE;
		}
		else{
			return new Score(throw1+throw2);
		}
	}
	
	public boolean isStrike(){
		return throw1 == 10 || throw2 == 10 || throw3 == 10;
	}
	
	public boolean isSpare(){
		return !isStrike() && throw1+throw2 >= 10;
	}
	
	public boolean isFinished(){
		return throw1 != NO_SCORE && (isStrike() || throw2 != NO_SCORE);
	}
	
	public void doThrow(int score){
		if(!isFinished()){
			if(throw1 == NO_SCORE){
				throw1 = score;
			}
			else if(throw2 == NO_SCORE){
				throw2 = score;
			}
			else if(throw3 == NO_SCORE){
				throw3 = score;
			}
		}
	}
}
