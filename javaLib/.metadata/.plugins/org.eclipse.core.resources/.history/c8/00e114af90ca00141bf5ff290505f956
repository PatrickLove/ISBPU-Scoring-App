package com.ispbu.scoring;

public class Frame {
	
	private static final int NO_SCORE = -1;
	
	private int throw1 = -1;
	private int throw2 = -1;
	
	
	public Score score(){
		if(){
			return Score.STRIKE;
		}
		else if((throw1+throw2) >= 10){
			return Score.SPARE;
		}
		else{
			return new Score(throw1+throw2);
		}
	}
	
	public boolean isStrike(){
		return throw1 == 10;
	}
	
	public boolean isSpare(){
		return !isStrike() && throw1+throw2 >= 10;
	}
	
	public boolean isFinished(){
		return throw1 != NO_SCORE && (isStrike() || throw2 != NO_SCORE);
	}
	
	public void doThrow(int score){
		if(!isFinished()){
			if(throw1 == NO_SCORE){
				throw1 = score;
			}
			else if(throw2 == NO_SCORE){
				throw2 = score;
			}
		}
	}

}
