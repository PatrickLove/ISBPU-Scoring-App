<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.isbpu.ispbuscoringapp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.GameViewActivity"
            android:label="@string/title_activity_game_view"
            android:parentActivityName=".ui.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.isbpu.ispbuscoringapp.ui.activities.MainActivity" />
        </activity>
        <activity
            android:name=".ui.activities.GameEntryActivity"
            android:label="@string/title_activity_game_entry"
            android:parentActivityName=".ui.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.isbpu.ispbuscoringapp.ui.activities.MainActivity" />
        </activity>
        <activity
            android:name=".ui.activities.CareerStatsActivity"
            android:label="@string/title_activity_carrer_stats"
            android:parentActivityName=".ui.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.isbpu.ispbuscoringapp.ui.activities.MainActivity" />
        </activity>
        <activity
            android:name=".ui.activities.GameListActivity"
            android:label="@string/title_game_list"
            android:parentActivityName=".ui.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.isbpu.ispbuscoringapp.ui.activities.MainActivity" />
        </activity>
    </application>

</manifest>
